<template>
    <select :name="name" class="form-control" data-tags="true">
        <slot></slot>
    </select>
</template>
<script>

    export default {
        props: ['options','value','name'],
        data() {
            return {
                msg:'hello vue'
            }
        },
        mounted() {
            let vm = this;

            $(this.$el)
                .select2({
                    theme: 'bootstrap',
                    data: this.options,
                    tags: true,
                })
                .val(this.value)
                .trigger('change')
                .on('change',function () {
                    vm.$emit('input', this.value)
                })
        },
        watch:{
            value:function(value){
                $(this.$el).val(value).trigger('change')
            },
            options:function (options) {
                $(this.$el).select2({data:options});
            }
        },
        destroyed: function () {
            $(this.$el).off().select2('destroy')
        }
    }
</script>
